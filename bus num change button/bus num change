package com.example.changebusnum;

import static android.speech.tts.TextToSpeech.ERROR;

import android.speech.tts.TextToSpeech;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;

import java.util.Locale;

public class MainActivity extends AppCompatActivity {
    //시간
    long delay=0;
    int busn=0;
    private TextToSpeech tts;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        tts = new TextToSpeech(this, new TextToSpeech.OnInitListener() {
            @Override
            public void onInit(int status) {
                if(status != ERROR) {
                    // 언어를 선택한다.
                    tts.setLanguage(Locale.KOREAN);
                }
            }
        });
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        //따로 빼서 쓸 버스 예약 버튼
        Button resbutton = (Button) findViewById(R.id.reservation);
        int[] busnum = {22,23,24};
        final int[] identify = {0};
        resbutton.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                    int k=changnum(busnum);
                    identify[0] =k;
                    resbutton.setText(String.valueOf(k));
                    tts.speak(String.valueOf(k)+"번 버스", TextToSpeech.QUEUE_FLUSH,null);
                    return;

            }
        });
        resbutton.setOnLongClickListener(new View.OnLongClickListener() {
            @Override
            public boolean onLongClick(View view) {
                tts.speak(String.valueOf(identify[0])+"로 예약하시겠습니까?",TextToSpeech.QUEUE_FLUSH,null);
                return false;
            }
        });
    }
    public int changnum(int[] bnum){
        if(busn>=bnum.length-1){
            busn=0;
        }
        else
            busn++;
        int resultbnum=bnum[busn];

        return resultbnum;
    }
}
