<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@drawable/logo1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hint"
            android:layout_width="330dp"
            android:layout_height="70dp"

            android:background="#FEEBB6"
            android:gravity="center"
            android:text="차량 번호를 입력해주세요."
            android:textColor="#A52E56"
            android:textColorHint="#979494"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/busid"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@drawable/layer_res"
            android:ems="10"
            android:gravity="center"
            android:hint="예시 : 강원15자2092"
            android:inputType="textPersonName"
            android:textColor="#221F1F"
            android:textColorHint="#979494"
            tools:ignore="Autofill,HardcodedText,MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/test1"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@drawable/layer_res"
            android:gravity="center"
            android:hint="버스번호를 입력해주세요."
            android:textColor="#221F1F"
            android:textColorHint="#979494"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/busnum"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@drawable/layer_res"
            android:ems="10"
            android:gravity="center"
            android:hint="예시 : 30,34-1"
            android:inputType="textPersonName"
            android:textColor="#221F1F"
            android:textColorHint="#979494"
            tools:ignore="Autofill,HardcodedText,MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/checkbox"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="#ED8DA9"
            android:gravity="center"
            android:onClick="btn_Click"
            android:text="확인하기"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/join"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="#ED8DA9"
            android:gravity="center"
            android:onClick="join_Click"

            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>