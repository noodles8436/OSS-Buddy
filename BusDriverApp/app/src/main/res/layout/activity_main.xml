<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hint"
        android:layout_width="281dp"
        android:layout_height="53dp"
        android:text="차량 번호를 입력해주세요."
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/busid"
        android:layout_width="281dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="예시 : 강원15자2092"
        android:inputType="textPersonName"
        tools:ignore="Autofill,HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        app:layout_constraintTop_toBottomOf="@+id/hint"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/checkbox"
        android:layout_width="109dp"
        android:layout_height="66dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:ems="10"
        android:onClick="btn_Click"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@+id/busnum"
        tools:ignore="HardcodedText,MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="125dp" />
    <Button
        android:id="@+id/joinbox"
        android:layout_width="109dp"
        android:layout_height="66dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:ems="10"
        android:onClick="join_Click"
        android:text="회원가입"
        app:layout_constraintTop_toBottomOf="@+id/checkbox"
        tools:ignore="HardcodedText,MissingConstraints,OnClick"
        tools:layout_editor_absoluteX="125dp" />

    <TextView
        android:id="@+id/test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버스번호를 입력하세요."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busid"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />
    <EditText
        android:id="@+id/busnum"
        android:layout_width="281dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="예시 : 30,34-1"
        android:inputType="textPersonName"
        tools:ignore="Autofill,HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        app:layout_constraintTop_toBottomOf="@+id/test1"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>