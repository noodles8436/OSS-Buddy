<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1E21"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".BD_loginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="55dp"
        android:background="#1B1E21"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_res2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prebus"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="남은 정거장 수"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/busstopname"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="정거장 이름"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/layer_res2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/busdrivername"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="이름"
            android:textColor="#858080"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="DuplicateIds,HardcodedText" />

        <TextView
            android:id="@+id/busnumber"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="차량번호"
            android:textColor="#FF858080"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
